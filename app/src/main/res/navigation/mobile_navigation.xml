<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_courses">

    <fragment
        android:id="@+id/navigation_courses"
        android:name="com.example.groupproject.ui.home.HomeFragment"
        android:label="@string/title_courses"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_assignments"
        android:name="com.example.groupproject.ui.dashboard.DashboardFragment"
        android:label="@string/title_Assignments"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_exams"
        android:name="com.example.groupproject.ui.notifications.NotificationsFragment"
        android:label="@string/title_exams"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_to_do"
        android:name="com.example.groupproject.ui.todo.TodoFragment"
        android:label="@string/to_do"
        tools:layout="@layout/fragment_todo" />
</navigation>